@{
    ViewBag.Title = "Detail";
}

@*@model IEnumerable<Project1.Models.Item>*@

<h2>Detail</h2>

@foreach(var x in Model)
{
    <p><b>Product Id : </b>@x.Id</p>
    <p><b>Category : </b>@x.Category</p>
    <img src="~/Image/@x.ImageUrl" class="img-thumbnail" alt="Mehtab Rehman" style="width:300px; height:300px">
    
    <p><b>Price : </b>@x.Price</p>
    <p><b>Description : </b>@x.Description</p>
}